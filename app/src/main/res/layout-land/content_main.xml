<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.linuxcomp.apps.hstester.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="@string/state_of_cable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/unknown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCableState"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="@string/type_of_cable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/unknown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvMicState" />

                </TableRow>

            </TableLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/no_cable"
                android:id="@+id/TypeIconIV"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="63dp"
                app:srcCompat="@drawable/headset_remote_hor"
                android:id="@+id/pultIV"
                android:layout_weight="0.09" />

            <TextView
                android:text="@string/push_to_show_deviceid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keycodetv" />

            <TableLayout
                android:layout_width="276dp"
                android:layout_height="131dp"
                android:layout_marginStart="43dp"
                android:layout_alignParentStart="true"
                android:id="@+id/tableLayout2"
                android:orientation="horizontal"
                android:stretchColumns="*"
                android:gravity="center_vertical|fill_horizontal">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#92C94A">

                    <TextView
                        android:text="@string/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:padding="3dip"
                        android:textAlignment="center" />



                    <TextView
                        android:text="@string/press"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:padding="3dip"
                        android:textAlignment="center" />


                    <TextView
                        android:text="@string/release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:padding="3dip"
                        android:textAlignment="center" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/table_dark_row">

                    <TextView
                        android:text="@string/indicator_btn_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textAlignment="viewStart"
                        android:padding="3dip" />


                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAD"
                        android:textAlignment="center"
                        android:padding="3dip" />



                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAR"
                        android:textAlignment="center"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/table_bright_row">

                    <TextView
                        android:text="@string/indicator_btn_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textAlignment="viewStart"
                        android:padding="3dip" />



                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/tvBD"
                        android:textAlignment="center"
                        android:padding="3dip" />


                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvBR"
                        android:textAlignment="center"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/table_dark_row">

                    <TextView
                        android:text="@string/indicator_btn_pause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAlignment="viewStart"
                        android:padding="3dip" />

                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCD"
                        android:textAlignment="center"
                        android:padding="3dip" />


                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCR"
                        android:textAlignment="center"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/table_bright_row">

                    <TextView
                        android:text="@string/indicator_btn_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:textAlignment="viewStart"
                        android:padding="3dip" />

                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDD"
                        android:textAlignment="center"
                        android:padding="3dip" />

                    <TextView
                        android:text="@string/zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDR"
                        android:textAlignment="center"
                         />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
